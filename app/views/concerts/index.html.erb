<h1>Listing Concerts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>Name</td>
      <td>Picture</td>
      <td>Date</td>
    </tr>
    <% @concerts.each do |concert| %>
      <tr>
        <td><%= concert.name %></td>
        <td><%= image_tag concert.pictureurl %></td>
        <td><%= concert.day %></td>

        <td><%= link_to 'Edit', edit_concert_path(concert) %></td>
        <td><%= link_to 'Delete', concert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Concert', new_concert_path %>
